{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "DefaultScheme": "Bearer",
    "Schemes": {
      "Bearer": {
        "Authority": "http://tokenserver",
        "ValidAudience": "my-app",
        "RequireHttpsMetadata": false,
        "ValidIssuer": "http://localhost:5479",
        "MetadataAddress": "http://tokenserver/.well-known/openid-configuration"
      }
    }
  }
}
